<div class="container mt-5">
    <div class="form-container m-auto col-lg-10 col-sm-12">
        <h1>Add new article</h1>
        {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.title) }}
        <div class="col-md-6 col-sm-12">
            {{ form_row(form.categories) }}
        </div>
        {{ form_row(form.content) }}
        <button type="submit" class="btn btn-primary mt-3">{{ button_label|default('Save') }}</button>
    </div>

    {{ form_end(form) }}
</div>
