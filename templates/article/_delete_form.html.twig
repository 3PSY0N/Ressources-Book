<form method="post" action="{{ path('article_delete', { id: article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this article?')">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="{{ class|default('btn') }}">{{ btnDeleteText|default('<i class="fas fa-trash text-danger"></i>')|raw }}</button>
</form>
