{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <main id="categoryForm" class="container d-flex flex-column justify-content-center">
        <div class="container mt-5">
            <div class="form-container m-auto col-lg-10 col-sm-12">
                <div class="d-flex justify-content-between">
                    <h1>Category index</h1>
                    <a href="{{ path('category_new') }}"><i class="fas fa-plus-square fa-2x"></i></a>
                </div>

                <table class="table table-hover">
                    <thead>
                    <tr class="text-center">
                        <th>Name</th>
                        <th>Slug</th>
                        <th>Color</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody class="text-center">
                    {% for category in categories %}
                        <tr class="align-middle">
                            <td>{{ category.slug|upper }}</td>
                            <td class="small">{{ category.slug }}</td>
                            <td class="btn-outline-{{ category.color }}">{{ category.color }}</td>
                            <td class="d-flex justify-content-center">
                                <a href="{{ path('category_edit', {'id': category.id}) }}"><i class="btn fas fa-edit"></i></a>
                                {{ include('category/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">No records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </main>
{% endblock %}
