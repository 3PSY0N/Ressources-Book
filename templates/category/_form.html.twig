<div class="container mt-5">
    <div class="form-container m-auto col-lg-10 col-sm-12">
        <h1>{{ title|default('Add new') }} category</h1>

        {{ form_start(form) }}
        <div class="row g-3">
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.color) }}
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary mt-3">{{ button_label|default('Save') }}</button>
            <a class="btn btn-secondary mt-3" href="{{ path('category_index') }}">back to list</a>
        </div>
        {{ form_end(form) }}
    </div>
</div>
